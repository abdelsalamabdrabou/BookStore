@model RolePermissions

@{
    ViewData["Title"] = "ManagePermissions";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Manage Roles</h4>
                <h4 class="card-title text-success">Role Id: @Model.RoleId</h4>
                <form method="post">
                    <input asp-for="RoleId" type="hidden" />
                    <div class="table-responsive">
                        <table class="table text-center" id="order-listing" cellspacing="0" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Module</th>
                                    <th>Action</th>
                                    <th>Permission</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for(int i = 0; i < Model.Modules.Count; i++)
                                {
                                    <tr>
                                        <td>@Model.Modules[i]</td>
                                        <td>@Model.Actions[i]</td>
                                        <input asp-for="Permissions[i].Value" type="hidden" />
                                        <td>@Model.Permissions[i].Value</td>
                                        <td>
                                            <div class="form-check">
                                              <input class="form-check-input" type="checkbox" asp-for="Permissions[i].Status" id="flexCheckDefault" />
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <button asp-action="Save" type="submit" class="btn btn-primary btn-lg mt-5">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

