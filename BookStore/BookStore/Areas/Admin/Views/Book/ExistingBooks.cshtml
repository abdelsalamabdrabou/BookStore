@model IEnumerable<Book>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Books Data</h4>
                <div class="table-responsive">
                    <table class="table" id="bookTable" cellspacing="0" style="width:100%">
                        <thead>
                            <tr>
                                <th style="min-width: 140px">ISBN</th>
                                <th style="min-width: 200px">Title</th>
                                <th style="width: 1%">Author</th>
                                <th style="width: 1%">Publisher</th>
                                <th style="width: 1%">Price</th>
                                <th style="width: 1%">Offering Price</th>
                                <th style="width: 1%">Edition</th>
                                <th style="width: 1%">Pub. Year</th>
                                <th style="width: 1%">Category</th>
                                <th style="width: 1%">Image</th>
                                <th style="width: 1%">Edit / Delete</th>
                            </tr>
                        </thead>                        
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
  
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
  <div id="liveToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true">
    <div id="toastHeader">
      <strong class="me-auto">Dashboard</strong>
      <small>Just now</small>
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body" id="toastBody">
       
    </div>
  </div>
</div>

@section Scripts{
    <script src="~/js/datatable/book.js"></script>
}